<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">

	<application>
		<locale-config>
			<default-locale>pt</default-locale>
		</locale-config>
		<message-bundle>br.com.litecode.messages</message-bundle>
		<resource-bundle>
			<base-name>br.com.litecode.messages</base-name>
			<var>msg</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>version</base-name>
			<var>version</var>
		</resource-bundle>

		<action-listener>org.omnifaces.eventlistener.ResetInputAjaxActionListener</action-listener>

		<resource-handler>org.omnifaces.resourcehandler.UnmappedResourceHandler</resource-handler>

		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>

	<converter>
		<converter-id>localDateTimeConverter</converter-id>
		<converter-class>br.com.litecode.web.LocalDateTimeConverter</converter-class>
	</converter>

	<factory>
    	<exception-handler-factory>org.omnifaces.exceptionhandler.FullAjaxExceptionHandlerFactory</exception-handler-factory>
	</factory>
</faces-config>
